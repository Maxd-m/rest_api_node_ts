# Variables de entorno para producción
# Copia este archivo a .env y rellena los valores

# Base de datos PostgreSQL (desde Render)
DB_URL=postgresql://usuario:contraseña@host.render.com:5432/database

# Puerto (Render lo asigna automáticamente, pero lo usamos como fallback)
PORT=4000

# Entorno
NODE_ENV=production

# URL del frontend desplegado en Netlify
FRONTEND_URL=https://tudominio.netlify.app

# JWT Secret (genera uno con: openssl rand -base64 32)
JWT_SECRET=tu_secret_seguro_aqui_32_caracteres_aleatorios
